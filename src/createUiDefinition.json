                            {
                                "name": "sslRenewalMinute",
                                "type": "Microsoft.Common.DropDown",
                                "label": "Rewnwal Minute",
                                "defaultValue": "30",
                                "toolTip": "Select the minute at which the SSL renewal check should run.",
                                "constraints": {
                                    "allowedValues": [
                                        {
                                            "label": "0",
                                            "value": 0
                                         },
                                         {
