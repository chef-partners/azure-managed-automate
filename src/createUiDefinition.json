                    },

                    {
                        "name": "updateSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Update Policy",
                        "elements": [
                            {
                                "name": "strategyInfo",
                                "type": "Microsoft.Common.InfoBox",
                                "options": {
                                    "icon": "Info",
                                    "text": "Many of the components in the Managed App need to be updated. Please select the update strategy that best suits you. For example to have all updates when they are ready use Canary but be aware that this may cause things to break."
                                },
                                "visible": true
                            },
                            {
                                "name": "strategy",
                                "type": "Microsoft.Common.DropDown",
                                "label": "Strategy",
                                "defaultValue": "Stable",
                                "constraints": {
                                    "allowedValues": [
                                        {
                                            "label": "Canary",
                                            "value": "canary"
                                        },
                                        {
                                            "label": "Fast Ring",
                                            "value": "fastring"
                                        },
                                        {
                                            "label": "Slow Ring",
                                            "value": "slowring"
                                        },
                                        {
