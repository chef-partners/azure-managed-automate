{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string",
            "metadata": {
                "description": "Name of the site into which the function should be deployed"
            }
        },
        "functionName": {
            "type": "string",
            "metadata": {
                "description": "name of the function"
            },
            "defaultValue": "counts"
        }
    },
    "variables": {
        "name": {
            "site": "[parameters('siteName')]",
            "function": "[parameters('functionName')]"
        },
        "apiVersions": {
            "functions": "2016-08-01"
        },        
        "code": {
            "automate_counts_csx": "",
            "base_count_csx": "",
            "icount_csx": "",
            "node_count_csx": "",
            "run_csx": "",
            "user_count_csx": ""
        }     
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites/functions",
            "name": "[concat(variables('name').site, '/', variables('name').function)]",
            "apiVersion": "[variables('apiVersions').functions]",
            "properties": {
                "config": {
                },
                "files": {
                    "AutomateCounts.csx": "[base64ToString(variables('code').automate_counts_csx)]",
                    "BaseCount.csx": "[base64ToString(variables('code').base_count_csx)]",
                    "ICount.csx": "[base64ToString(variables('code').icount_csx)]",
                    "NodeCount.csx": "[base64ToString(variables('code').node_count_csx)]",
                    "run.csx": "[base64ToString(variables('code').run_csx)]",
                    "UserCount.csx": "[base64ToString(variables('code').user_count_csx)]"
                }
            }
        }      
    ],
    "outputs": {
        "name": {
            "type": "string",
            "value": "[parameters('functionName')]"
        },        
        "apiKey": {
            "type": "string",
            "value": "[listsecrets(resourceId('Microsoft.Web/sites/functions', variables('name').site, variables('name').function), '2016-08-01').key]"
        }
    }
}